@page
@model MvLAuthServer2.Pages.Admin.Bans.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>Create a new ban:</p>

<form method="post">
    <label asp-for="Ban!.Message" class="control-label"></label>
    <input asp-for="Ban!.Message" />
    <br>
    <label asp-for="Ban!.UserId" class="control-label"></label>
    <input asp-for="Ban!.UserId" pattern="^(?:\{{0,1}(?:[0-9a-fA-F]){8}-(?:[0-9a-fA-F]){4}-(?:[0-9a-fA-F]){4}-(?:[0-9a-fA-F]){4}-(?:[0-9a-fA-F]){12}\}{0,1})$" />
    <br>
    <label asp-for="Ban!.IpRangeMin" class="control-label"></label>
    <input asp-for="Ban!.IpRangeMin" />

    <label asp-for="Ban!.IpRangeMax" class="control-label"></label>
    <input asp-for="Ban!.IpRangeMax" />
    <br>
    <label asp-for="Ban!.Expiration" class="control-label"></label>
    <input asp-for="Ban!.Expiration" />
    <br />
    <input type="submit" value="Create" />
</form>

<a asp-page="Index">Cancel</a>
